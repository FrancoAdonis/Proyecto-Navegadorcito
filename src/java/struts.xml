<!DOCTYPE struts PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
"http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
    <include file="example.xml"/>
    <!-- Configuration for the default package. -->
    <package name="Sistema" extends="struts-default">
        
        <action name="login" 
            class="WebApp.Action"
            method="exito">
            <result name="exito">/resultado.jsp</result>
        </action>          
        
        <action name="checkLogin" class="WebApp.Action" method="doLogin">
           <!-- <result name="success" >checkLogin</result>-->
            <result name="error">/error.jsp</result>
            <result name="success">/resultado.jsp</result>
            <result name="ADMINISTRADOR">/Administrador.jsp</result>
            <result name="PROFESOR">/Profesor.jsp</result>
            <result name="ESTUDIANTE">/Estudiante.jsp</result>
            <result name="CONTENEDOR">/contenedor.jsp</result>
        </action>
        
    </package>
</struts>
